@model ImageBoard.Models.RegisterModel

@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    @Html.BeginForm("Register", "Account", FormMethod.Post){ 
        <div class="card">
            <div class="card-header">
                <h4>Register Account</h4>
            </div>
            <div class="card-body">
                <div class="form-group">
                    @Html.LabelFor(model => model.Email)
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @type="email", @placeholder="Type Email Address Here"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Username)
                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @placeholder = "Type Username Here" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password)
                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @type = "password", @placeholder = "password" })

                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    }
</div>


